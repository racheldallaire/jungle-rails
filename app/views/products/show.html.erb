<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>


      <div class="col-sm-8">
      <dl class="dl-horizontal">
       <dd> <h3 align='center'> Add Review </h3></dd>
      <%= form_for([@product, @product.reviews.build]) do |f| %>
      <div class="form-group">
      <dt>
        <%= f.label :rating %></dt>
       <dd> <%= f.select :rating, [5,4,3,2,1], class: 'form-control' %></dd>

      <dt>
        <%= f.label :description %></dt>
       <dd> <%= f.text_field :description, class: 'form-control' %></dd>


        <dd><%= f.submit 'Submit Review', class: 'btn btn-primary' %></dd>
        <% end %>
      </div>
      </dl>
      </div>

    <% if @reviews.count != 0 %>
    <%= render partial: "review", locals:{reviews: @reviews} %>
    <% else %>
    <h3 align='center'> Reviews </h3>
    <h5 align='center'>No reviews yet. </h5>

  <% end %>
   </div>
 </article>

</section>
